{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings]
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*/src"]
    },

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Recommended Options
    "strict": true,

    "skipLibCheck": true
  }
}
